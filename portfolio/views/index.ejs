<% include fixCung/header %>

    <!-- lead -->
    <a class="ish-row ish-fullrow ish-lead" href="index.html">
        <span class="ish-lead__caption ish-icon-up">Featured Portfolio</span>
        <div class="ish-lead__image">
            <img src="./images/header.jpg" alt="work in silent">
        </div>
        <h1 class="ish-lead__headline">
            <span class="ish-lead__headline-inner">Workin<br>Silent</span>
        </h1>
    </a>
    <!-- lead end -->



    <!-- content -->
    <div class="ish-row ish-content ish-portfolio ish-macy">

        <!-- main content -->
        <ul class="ish-portfolio-item ish-portfolio-filter">
            <li class="ish-portfolio-filter__item ish-portfolio-filter--title">
                <h5>Filter:</h5>
            </li>
            <li class="ish-portfolio-filter__item"><a class="ish-portfolio-filter__link ish-portfolio-filter__link--active" href="#all">All</a></li>
            <% fakeData.sanpham.forEach(function(danhmuc){
                %>
                <li class="ish-portfolio-filter__item">
                    <a class="ish-portfolio-filter__link" href="#<%= danhmuc.cat %>">
                        <%= danhmuc.cat %>
                    </a>
                </li>

                <%
            }) %>

        </ul>
        <% fakeData.sanpham.forEach(function(motsanpham) {
            %>
            <a class="ish-portfolio-item ish--tc13 ish-portfolio-<%= motsanpham.cat %>" href="/details/<%= motsanpham.pathSeo %>/<%= motsanpham.id %>">
                <div class="ish-portfolio-item__image-container">
                    <img class="ish-portfolio-item__image" src="<%= motsanpham.bigImage %>" alt="business cards">
                </div>
                <div class="ish-portfolio-item__desc">
                    <span class="ish-portfolio-item__title"><%= motsanpham.title %></span>
                    <span class="ish-portfolio-item__subtitle"><%= motsanpham.cat %></span>
                </div>
            </a>
            <% }); %>

    </div>

    <% include fixCung/footer %>